#!/usr/bin/env python
import os, glob
from os.path import join, exists
from fabricate import main, autoclean, run

BUILD = 'build'
GOLD = 'gold'

tests = glob.glob('*.py')

def build():
    #path = os.path.dirname(__file__) + "../../parts/xilinx/zynq"
    #cur=os.path.dirname(__file__)
    #os.system('cd %s; ./prep zynq.t zynq.py; cd %s' % (path, cur))
    for test in tests:
        if not test.startswith('_'):
            base, suffix = test.split('.')
            compile(base)

def compile(base):
    u = base+'.ucf'
    v = base+'.v'
    buildu, goldu = join(BUILD,u), join(GOLD,u)
    buildv, goldv = join(BUILD,v), join(GOLD,v)
    run('python',base+'.py', join(BUILD,base))
    if exists(goldu):
        run('cmp',buildu,goldu)
    if exists(goldv):
        run('cmp',buildv,goldv)

def clean():
    autoclean()

def gold():
    os.system('cp %s/*{.v,.ucf} %s' % (BUILD, GOLD))

#clean()
main()
